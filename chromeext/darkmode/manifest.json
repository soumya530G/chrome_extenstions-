{
    "name": "Mode",
    "description": "switch modes",
    "version": "1.0.0",
    "manifest_version": 2,
    "background":{
        "scripts":[
            "js/popup.js"
        ],
        "persistent":true
    },
    "browser_action":{
        "default_title":"Mode",
        "default_icon": "images/icon2.png",
        "default_popup": "html/popup.html"
    },
    "icons":{
        "128": "images/icon2.png"
    },
    "permissions":[
        "https://*/*",
        "http://*/*",
        "tabs"
    ]
}